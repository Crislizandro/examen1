<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="examen1.MainPage">

    <StackLayout>
        <Entry x:Name="nombre" Placeholder=" Ingrese su Nombre " Keyboard="Text" />
        <Entry x:Name="Telefono" Placeholder=" Ingrese su numero de Telefono " Keyboard="Numeric" />
        <Entry x:Name="edad" Placeholder=" Ingrese su Edad " Keyboard="Numeric" />
        <Entry x:Name="nota" Placeholder=" Ingre una nota" Keyboard="Text" />
        <Button x:Name="btnsalvar" Text=" salvar contacto " Clicked="btnsalvar_Clicked"/>
        
        
    </StackLayout>
    

</ContentPage>
